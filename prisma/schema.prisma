generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int       @id @default(autoincrement())
  name              String
  email             String    @unique
  password          String
  role              String    @default("user")
  isActive          Boolean  @default(false)
  emailConfirmed    Boolean   @default(false)
  emailToken        String?
  emailTokenExpiry  DateTime?
  createdAt         DateTime  @default(now())
  lastSeenAt        DateTime?    
  activities        UserActivity[] 
}


model Record {
  id           Int      @id @default(autoincrement())
  studentName  String
  matricNumber BigInt
  level        String   @default("100")
  department   String   @default("nil")
  offense      String
  punishment   String
  status       String
  date         DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
  isDeleted    Boolean  @default(false)
  deletedAt    DateTime? 
  offenseCount       Int      @default(0)
  punishmentDuration String?  
  resumptionPeriod   String?
}

model UserActivity {
  id         Int      @id @default(autoincrement())
  userId     Int
  userName   String   
  action     String
  timestamp  DateTime @default(now())
  ipAddress  String?
  userAgent  String?

  user       User     @relation(fields: [userId], references: [id])
}

